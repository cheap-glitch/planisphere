{
  "name": "planisphere",
  "description": "A straightforward sitemap generator written in TypeScript.",
  "version": "0.0.1",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheap-glitch/planisphere.git"
  },
  "bugs": {
    "url": "https://github.com/cheap-glitch/planisphere/issues"
  },
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "homepage": "https://github.com/cheap-glitch/planisphere#readme",
  "keywords": [
    "sitemap",
    "sitemap-generator"
  ],
  "main": "./build/index.min.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run build:ts && npm run build:minify",
    "build:minify": "terser --compress --mangle toplevel --comments '/^!/' --output build/index.min.js -- build/index.js",
    "build:ts": "tsc",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "upload:coverage": "coveralls < .coverage/lcov.info"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "coverageDirectory": ".coverage"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.13.0",
    "eslint-plugin-smarter-tabs": "^1.1.2",
    "jest": "^26.6.3",
    "terser": "^5.5.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
