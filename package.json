{
  "name": "planisphere",
  "description": "A straightforward sitemap generator written in TypeScript.",
  "version": "1.0.0",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheap-glitch/planisphere.git"
  },
  "bugs": {
    "url": "https://github.com/cheap-glitch/planisphere/issues"
  },
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "homepage": "https://github.com/cheap-glitch/planisphere#readme",
  "keywords": [
    "sitemap",
    "sitemap-generator"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf build && npm run build",
    "build:watch": "tsc --watch",
    "coverage": "jest --collectCoverage",
    "coverage:upload": "coveralls < .coverage/lcov.info",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "prepublishOnly": "npm run test && npm run build:clean",
    "test": "jest"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@cheap-glitch/typescript",
    "env": {
      "es6": true,
      "node": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": ".coverage"
  },
  "devDependencies": {
    "@cheap-glitch/eslint-config-typescript": "^1.3.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "eslint": "^7.25.0",
    "expect-more-jest": "^5.2.2",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
