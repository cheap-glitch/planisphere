{
  "name": "planisphere",
  "version": "1.0.1",
  "description": "A straightforward sitemap generator written in TypeScript.",
  "license": "ISC",
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "repository": "cheap-glitch/planisphere",
  "homepage": "https://github.com/cheap-glitch/planisphere#readme",
  "bugs": "https://github.com/cheap-glitch/planisphere/issues",
  "funding": "https://github.com/sponsors/cheap-glitch",
  "keywords": [
    "crawler",
    "generator",
    "index",
    "navigation",
    "robot",
    "seo",
    "sitemap",
    "sitemaps",
    "urls",
    "xml"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf build && npm run build",
    "build:watch": "tsc --watch",
    "coverage": "npm test -- --collectCoverage",
    "coverage:upload": "coveralls < .coverage/lcov.info",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "prepublishOnly": "npm run test && npm run build:clean",
    "test": "jest --runInBand",
    "test:watch": "npm test -- --watch"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@cheap-glitch/typescript",
    "env": {
      "es6": true,
      "node": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": ".coverage"
  },
  "devDependencies": {
    "@cheap-glitch/eslint-config-typescript": "^1.3.0",
    "@cheap-glitch/typescript-config": "^1.0.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.3.0",
    "eslint": "^7.26.0",
    "expect-more-jest": "^5.2.2",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
