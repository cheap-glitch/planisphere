{
  "name": "planisphere",
  "description": "A straightforward sitemap generator written in TypeScript.",
  "version": "0.9.0",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheap-glitch/planisphere.git"
  },
  "bugs": {
    "url": "https://github.com/cheap-glitch/planisphere/issues"
  },
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "homepage": "https://github.com/cheap-glitch/planisphere#readme",
  "keywords": [
    "sitemap",
    "sitemap-generator"
  ],
  "main": "./build/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "coverage:upload": "coveralls < .coverage/lcov.info",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@cheap-glitch/typescript",
    "env": {
      "es6": true,
      "node": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": ".coverage"
  },
  "devDependencies": {
    "@cheap-glitch/eslint-config-typescript": "^1.3.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "eslint": "^7.17.0",
    "expect-more-jest": "^5.2.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
